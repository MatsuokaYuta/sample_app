<p><%= link_to(@user.name, "/users/#{@user.id}") %></p>
<p><%= @post.content %></p>
<% if @post.image_name != nil %>
    <image src="<%= "/posts_images/#{@post.image_name}" %>">
<% end %>
<p><%= @post.created_at %></p>

<% if @post.user_id == @current_user.id %>
    <%= link_to("編集", "/posts/#{@post.id}/edit") %>
    
    <%= link_to("削除", "/posts/#{@post.id}/destroy", {method: "post"}) %>
<% end %>