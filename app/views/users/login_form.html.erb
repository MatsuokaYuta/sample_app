<h1>ログイン</h1>

<!--サクセスメッセージを表示-->
<% if flash[:notice]%>
    <%= flash[:notice] %>
<% end %>

<% if @error_message %>
    <%= @error_message %>
<% end %>

<%= form_tag("/login") do %>
    <p>ユーザー名</p>
    <input name="name" value="<%= @name %>">
    <p>パスワード</p>
    <input type="password" name="password" value="<%= @password %>">
    <input type="submit" value="ログイン">
<% end %>

<%= link_to("キャンセル", "/") =%>